<h1>C'est l'ensemble des tasks</h1>


<ul>
  <% @tasks.each do |t| %>
  <li>
    <% if t.completed == false %>
     <i class="far fa-square"></i> -
    <% else %>
      <i class="far fa-check-square"></i> -
    <% end %>
    <%= link_to t.title, task_path(t) %>
  </li>
  <% end %>
</ul>

<i class="fas fa-plus-square"></i> <%= link_to "Create a task", new_task_path %>
